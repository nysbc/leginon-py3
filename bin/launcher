#!/bin/bash
set -e

src=$(realpath "$0")
csd=$(dirname "$src")
# root directory
cd "$(dirname "$csd")"

# shellcheck source=/dev/null
source .venv/bin/activate

# echo "NOTICE: leginon cwd is [$(pwd)]" 1>&2

# because leginon.* is referenced from within it :/ 
PYTHONPATH="$(pwd)"
export PYTHONPATH
echo "PYTHONPATH = $PYTHONPATH"

python leginon/launcher.py "$@"
